<h1>Listing configurations</h1>
 
 <%= link_to 'New configuration', new_configuration_path %>
 <%= link_to "Home", root_path %>
 
<table>
  <tr>
    <th>Name</th>
    <th>Value</th>
    <th>Active?</th>
  </tr>
 
<% if (@configurations) %>
  <% @configurations.each do |configuration| %>
    <tr>
      <td><%= configuration.configuration_name %></td>
      <td><%= configuration.configuration_value %></td>
      <td><%= configuration.active %></td>
    </tr>
  <% end %>
<% else %>
    <tr>
      <td colspan="3">There are not configurations to show</td>
    </tr>
<% end %>

</table>