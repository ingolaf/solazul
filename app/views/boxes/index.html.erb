<div class="navigation">
  <ul>
    <li>TAMAÑO DE OSTIÓN</li>
    <li class="active">LISTADO</li>
  </ul>
</div>

<div class="container"> 

  <div class="page_actions">
    <%= link_to image_tag('add.png'), new_box_path %>
    <%= link_to image_tag('home.png'), root_path %>
  </div>

  <p class="alert"><%= flash[:notice] %></p>

  <div class="list_contianer">
    <table class="zebra">
      <tr>
        <th>Talla de ostión</th>
        <th>Activo?</th>
        <th></th>
      </tr>
     
    <% if (@boxes.length > 0) %>
      <% @boxes.each do |box| %>
        <tr>
          <td><%= box.description %></td>
          <td align="center"><%= box.active ? image_tag('thumbs_up.png') : image_tag('thumbs_down.png') %></td>
          <td align="right"><%= link_to image_tag('edit_mini.png'), :action => 'edit', :id => box.id %></td>
        </tr>
      <% end %>
    <% else %>
        <tr>
          <td colspan="3" align="center">There are not boxes to show</td>
        </tr>
    <% end %>

    </table>
  </div>
</div>