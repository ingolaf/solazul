<div class="navigation">
  <ul>
    <li>TALLA DE OSTIÓN</li>
    <li class="active">EDICIÓN</li>
  </ul>
</div>

<div class="container"> 

  <div class="page_actions">
    <%= link_to image_tag('home.png'), root_path %>
    <%= link_to image_tag('back.png'), boxes_path %>
  </div>

  <%if flash[:notice] %>
    <p class="alert"><%= flash[:notice] %></p>
  <% end %>
  
  <div class="list_contianer">
    <%= form_for :box, :url => {:action => 'update',  :id => @box.id} do |f| %>
      <input name="_method" type="hidden" value="patch" />
      <label>
        <span>Talla del ostión</span>
        <%= f.text_field :description %>
      </label>
     
      <p>
        <span>Activo?</span>
        <%= check_box_tag :active, 1, @box.active? ? true : false %>
      </p>
     
      <p>
        <%= f.button 'Guadar tamaño' %>
      </p>
    <% end %>
  </div>
</div>