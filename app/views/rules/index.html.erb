<div class="navigation">
  <ul>
    <li>REGLAS</li>
    <li class="active">LISTADO</li>
  </ul>
</div>

<div class="container"> 

  <div class="page_actions">
    <%= link_to image_tag('add.png'), new_rule_path %>
    <%= link_to image_tag('home.png'), root_path %>
  </div>

  <p class="alert"><%= flash[:notice] %></p>
  
  <div class="list_contianer">
    <table class="zebra">
      <tr>
        <th>Porcentaje de carga</th>
        <th>Tamaño de ostión</th>
        <th>Descuento máximo permitido</th>
        <th>Active?</th>
        <th></th>
      </tr>
     
    <% if (@rules.length > 0) %>
      <% @rules.each do |rule| %>
        <% if (rule != nil) %>
          <tr>
            <td><%= rule.percentage_load %></td>
            <td><%= rule.box.description %></td>
            <td><%= rule.max_discount %></td>
            <td align="center"><%= rule.active ? image_tag('thumbs_up.png') : image_tag('thumbs_down.png') %></td>
            <td align="right"><%= link_to image_tag('edit_mini.png'), :action => 'edit', :id => rule.id %></td>
          </tr>
        <% end %>
      <% end %>
    <% else %>
        <tr>
          <td colspan="5" align="center">No existen reglas configuradas</td>
        </tr>
    <% end %>

    </table>
  </div>
</div>